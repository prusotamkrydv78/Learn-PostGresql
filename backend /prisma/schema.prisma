generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id             String          @id @default(uuid())
  name           String
  email          String          @unique
  password       String
  createdAt      DateTime        @default(now())
  MovieCreator   Movie[]         @relation("MovieCreator")
  movies         Movie[]         @relation("User")
  watchListItems WatchListItem[] @relation("User")
}

model Movie {
  id              String          @id @default(uuid())
  title           String
  overview        String?
  releaseYear     Int
  genres          String[]        @default([])
  runtime         Int?
  posterUrl       String?
  createBy        String
  createAt        DateTime        @default(now())
  watchListItemms WatchListItem[] @relation("Movies")
  userId          String
  //relations
  user            User            @relation("User", fields: [userId], references: [id])
  creator         User            @relation("MovieCreator", fields: [createBy], references: [id])
}

model WatchListItem {
  id        String          @id @default(uuid())
  userId    String
  movieId   String
  status    WatchListStatus @default(PLANNED)
  rating    Int?
  notes     String?
  createAt  DateTime        @default(now())
  updatedAt DateTime        @default(now())
  //Establishing Relations

  user  User  @relation("User", fields: [userId], references: [id], onDelete: Cascade)
  movie Movie @relation("Movies", fields: [movieId], references: [id], onDelete: Cascade)

  @@unique([userId,movieId])
}

enum WatchListStatus {
  PLANNED
  WATCHING
  COMPLETED
  DROPPED
}
